@model IEnumerable<IT431Site.Models.GPUCard>

@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>
<style>
    
#preview{
	position:absolute;
	border:1px solid #ccc;
	background:#333;
	padding:5px;
	display:none;
	color:#fff;
}

pre {
    display: block;
    font: 100% "Courier New", Courier, monospace;
    padding: 10px;
    border: 1px solid #bae2f0;
    background: #e3f4f9;
    margin: .5em 0;
    overflow: auto;
    width: 800px;
}
</style>
<p>
@if (Request.IsAuthenticated)
{
    @Html.ActionLink("Create New", "Create")
}
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageLink)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemoryType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Memory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClockSpeed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Chipset.ChipsetName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Manufacturer.ManufacturerName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="~/Images/@Html.DisplayFor(modelItem => item.ImageLink)" class="preview"><img src="~/Images/@Html.DisplayFor(modelItem => item.ImageLink)" class="img-responsive" style="height:40px;" /></a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MemoryType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Memory) MB
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClockSpeed) MHz
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Chipset.ChipsetName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Manufacturer.ManufacturerName)
        </td>
    @if (Request.IsAuthenticated)
    {
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.GPUCardID }) |
            @Html.ActionLink("Details", "Details", new { id=item.GPUCardID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.GPUCardID })
        </td>
    }
    else
    {
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.GPUCardID })
        </td>
    }
    </tr>
}
</table>
